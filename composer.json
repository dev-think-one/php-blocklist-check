{
  "name": "yaroslawww/php-blocklist-check",
  "description": "Simple blocklist validator.",
  "keywords": [
    "blocklist"
  ],
  "homepage": "https://github.com/yaroslawww/php-blocklist-check",
  "license": "MIT",
  "authors": [
    {
      "name": "Yaroslav Georgitsa",
      "email": "yaroslav.georgitsa@gmail.com",
      "homepage": "https://github.com/yaroslawww",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.1",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.10"
  },
  "autoload": {
    "psr-4": {
      "BlockListCheck\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlockListCheck\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --stop-on-failure",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "psalm": "vendor/bin/psalm"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}